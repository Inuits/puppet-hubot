# Common parameters
export HUBOT_LOG_LEVEL="<%= scope.lookupvar('hubot::log_level') %>"

<% if @adapter == 'irc' %># IRC adapter parameters
export HUBOT_IRC_NICK="<%= scope.lookupvar('hubot::irc_nickname') %>"
export HUBOT_IRC_ROOMS="<%= scope.lookupvar('hubot::irc_rooms') %>"
export HUBOT_IRC_SERVER="<%= scope.lookupvar('hubot::irc_server') %>"
export HUBOT_IRC_DEBUG="<%= scope.lookupvar('hubot::irc_debug') %>"
export HUBOT_IRC_UNFLOOD="<%= scope.lookupvar('hubot::irc_unflood') %>"
<% if @irc_port %>export HUBOT_IRC_PORT"<%= scope.lookupvar('hubot::irc_port') %>"<% end %>
<% if @irc_password %>export HUBOT_IRC_PASSWORD"<%= scope.lookupvar('hubot::irc_password') %>"<% end %>
