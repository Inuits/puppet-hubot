<% if @xmpp_port %>export HUBOT_XMPP_PORT"<%= scope.lookupvar('hubot::xmpp_port') %>"<% end %>
export HUBOT_XMPP_LEGACYSSL"<%= scope.lookupvar('hubot::xmpp_legacyssl') %>"
